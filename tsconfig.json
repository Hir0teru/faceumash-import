{
  "compilerOptions": {
    "module": "esnext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "ES2017",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["es2017", "es2020"]
  },
  "compileOnSave": true,
  "include": ["src"]
}
